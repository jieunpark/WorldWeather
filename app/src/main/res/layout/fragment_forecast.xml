<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.jepark.worldweather.viewmodel.ForecastViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
           android:id="@+id/textCityName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{viewModel.textCityName}"
           tools:text="런던"/>
        <TextView
            android:id="@+id/textWeatherDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textCityName"
            android:text="@{viewModel.textDesc}"
            tools:text="구름 조금"/>
        <TextView
            android:id="@+id/textTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textCityName"
            app:layout_constraintStart_toEndOf="@+id/textWeatherDesc"
            android:text="@{viewModel.textTemp}"
            tools:text="36"/>
        <TextView
            android:id="@+id/textTempMinMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/textTemp"
            app:layout_constraintTop_toBottomOf="@+id/textCityName"
            android:text="@{viewModel.textTempMinMax}"
            tools:text="38/29"/>

    </android.support.constraint.ConstraintLayout>
</layout>